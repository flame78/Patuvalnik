<Page
    x:Class="Patuvalnik.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Patuvalnik"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Patuvalnik.PartialViews"
    xmlns:ap="using:Patuvalnik.AttachedProporties"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Feed"
                       FontSize="20"
                       VerticalAlignment="Center"
                                Grid.Row="0"
                                Grid.Column="0"/>
        <Button x:Name="ChangeCitiesButton" Content="Change cities"
                HorizontalAlignment="Center"
                Grid.Row="0"
                Grid.Column="0"/>
        <Button x:Name="OptionsButton" Content="Options"
                Grid.Row="0"
                Grid.Column="2"/>
        <views:TripsView Name="Tv"
                         Grid.Row="1"
                         Grid.Column="0"
                         ap:CitiesExtension.CityFrom="1"
                         ap:CitiesExtension.CityTo="2" />
        <views:TripsView Grid.Row="1"
                         Grid.Column="1"
                         ap:CitiesExtension.CityFrom="2"
                         ap:CitiesExtension.CityTo="1" />
    </Grid>
</Page>
